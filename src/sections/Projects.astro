---
import img01 from "@/assets/projects/img01.png";
import img02 from "@/assets/projects/img02.png";
import img03 from "@/assets/projects/img03.png";
import img04 from "@/assets/projects/img04.png";

const projects = [
  {
    img: img01,
    title: "Página web cooperativa CCQ",
    description:
      "Computación cuántica, dinámica de fluidos, procesamiento de alto rendimiento, optimización de procesos.",
  },
  {
    img: img02,
    title: "Página web cooperativa Montes Vegas",
    description:
      "Computación cuántica, dinámica de fluidos, procesamiento de alto rendimiento, optimización de procesos.",
  },
  {
    img: img03,
    title: "Página web empresa minera CCQ",
    description:
      "Computación cuántica, dinámica de fluidos, procesamiento de alto rendimiento, optimización de procesos.",
  },
  {
    img: img04,
    title: "Página web empresa minera CCQ",
    description:
      "Computación cuántica, dinámica de fluidos, procesamiento de alto rendimiento, optimización de procesos.",
  },
];
---

<section id="projects" class="">
  <div class="container mx-auto">
    <div class="flex justify-between items-center">
      <h2 class="text-3xl font-bold mb-6">Proyectos recientes</h2>
      <button
        class="bg-black hidden hover:bg-gray-600 text-white px-4 py-2 rounded-full flex items-center"
      >
        <span>Ver todos los proyectos</span>
        <svg
          class="w-4 h-4 inline-block ml-2"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="p-6 bg-white flex flex-col gap-3">
            <img
              src={project.img.src}
              alt={project.title}
              class="h-[230px] w-full object-cover rounded-lg"
            />
            <h3 class="text-xl font-semibold">{project.title}</h3>
            <p>{project.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
